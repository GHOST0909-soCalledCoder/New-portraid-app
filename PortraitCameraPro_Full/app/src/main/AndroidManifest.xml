<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.portraitcamera.app">

    <!-- Permissions -->
    <uses-permission android:name="android.permission.CAMERA" />
    <!-- For API < 29 this grants write/read to external storage; on modern Android prefer MediaStore APIs -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <!-- Optional: declare that the app uses a camera (helps Play Store / device filters) -->
    <uses-feature android:name="android.hardware.camera.any" android:required="false" />

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:theme="@style/Theme.PortraitCamera">

        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.PortraitCamera">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    </application>
</manifest>